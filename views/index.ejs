<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>TODO</title>
    <style>
        .hide {display: none;}
        .show {display: block;}
        .wait span, .doing span, .done span {
            background: #fff;
            cursor: pointer;
        }
        .wait .swait, .doing .sdoing, .done .sdone {
            background: #00aa00;
        }
    </style>
</head>
<body>
<div id="root">
    <h1 data-model="title"></h1>
    <span>被选中的标签： </span>
    <span id ="delText"></span>
    </br></br>
    <div style="width:400px;float:left;">
      <h2>任务箱</h2>
      <div>
        <button data-onClick="addTask">添加任务</button>
        <form data-onSubmit="submit", data-class="addShow">
            <input data-onInput="changeAddContent" placeholder="任务名称" data-model="addContent"/>
            <input data-onInput="changeAddTags" placeholder="标签（多个标签以逗号分隔）" data-model="addTags"/>
            <select data-onChange="changeTime">
              <option value="今日待办">今日待办</option>
              <option value="明日待办">明日待办</option>
              <option value="未来">未来</option>
            </select>
            <input type="submit" value="提交任务" />
        </form>
      </div>
      <ul>
        <li id="itime" data-list="todos">
          <p data-model="todos.task"></p>
          <p data-model="todos.date"></p>
          <p data-model="todos.times"></p>
          <div data-class="todos.status">
              <span data-onClick="stateWait" class="swait">Wait</span>
              <span data-onClick="stateDoing" class="sdoing">Doing</span>
              <span data-onClick="stateDone" class="sdone">Done</span>
          </div>
          <p>标签</p>
          <ul>
            <li data-list="todos.tags">
              <span data-model="todos.tags.name" data-onClick="changeDelListTag"></span>
            </li>
          </ul>
          <br/>  
          <form data-onSubmit="addListTag">
              <input data-onInput="changeAddListTag" placeholder="待添加的标签名称" data-model="addListContent"/>   
              <input type="submit" value="添加标签" />
          </form> 
          <form data-onSubmit="modifyListTag">
              <input data-onInput="changeModifyListTag" placeholder="修改后的标签名称" data-model="modifyListContent"/>   
              <input type="submit" value="修改标签" />
          </form>
          <form data-onSubmit="delListTag">
              <input type="submit" value="删除标签" />
          </form>       
          <br/><br/>
          <button data-onClick="delTime">删除待完成时间</button>
          <br/><br/>
          <button data-onClick="delTask">删除任务</button>
        </li>
      </ul>
    </div>
    <div style="width:400px;float:left;">
      <h2>临时任务箱</h2>
      <div>
      <button data-onClick="addTaskTmp">添加临时任务</button>
      <form data-onSubmit="submitTmp", data-class="addShowTmp">
          <input data-onInput="changeAddContentTmp" placeholder="任务名称" data-model="addContentTmp"/>
          <input data-onInput="changeAddTagsTmp" placeholder="标签（多个标签以逗号分隔）" data-model="addTagsTmp"/>
          <input type="submit" value="提交任务" />
      </form>
      </div>
      <ul>  
        <li id="notime" data-list="todos">
          <p data-model="todos.task"></p>
          <p data-model="todos.date"></p>
          <div data-class="todos.status">
              <span data-onClick="stateWait" class="swait">Wait</span>
              <span data-onClick="stateDoing" class="sdoing">Doing</span>
              <span data-onClick="stateDone" class="sdone">Done</span>
          </div>
          <p>标签</p>
          <ul>
            <li data-list="todos.tags">
              <span data-model="todos.tags.name" data-onClick="changeDelListTag"></span>
            </li>
          </ul>
          <br/>  
          <form data-onSubmit="addListTag">
              <input data-onInput="changeAddListTag" placeholder="待添加的标签名称" data-model="addListContent"/>   
              <input type="submit" value="添加标签" />
          </form> 
          <form data-onSubmit="modifyListTag">
              <input data-onInput="changeModifyListTag" placeholder="修改后的标签名称" data-model="modifyListContent"/>   
              <input type="submit" value="修改标签" />
          </form>      
          <form data-onSubmit="delListTag">
              <input type="submit" value="删除标签" />
          </form>  
          <br/><br/>
          <form data-onSubmit="submitTime">
              <select data-onChange="changeTime">
              <option value ="今日待办">今日待办</option>
              <option value ="明日待办">明日待办</option>
              <option value="未来">未来</option>
            </select>
            <input type="submit" value="添加待完成时间" />
          </form>
          <br/>
          <button data-onClick="delTask">删除任务</button>
        </li>
      </ul>       
    </div>
    <div style="width:400px;float:left;">
      <h2>标签任务</h2>
      <ul>  
          <li id="tagTask" data-list="todos">
            <p data-model="tagcluster"></p>
            <p data-model="todos.task"></p>
            <p data-model="todos.date"></p>
            <p data-model="todos.times"></p>
            <div data-class="todos.status">
                <span data-onClick="stateWait" class="swait">Wait</span>
                <span data-onClick="stateDoing" class="sdoing">Doing</span>
                <span data-onClick="stateDone" class="sdone">Done</span>
            </div>
            <p>标签</p>
            <ul>
              <li data-list="todos.tags">
                <span data-model="todos.tags.name" data-onClick="changeDelListTag"></span>
              </li>
            </ul>
            <br/>  
            <form data-onSubmit="addListTag">
                <input data-onInput="changeAddListTag" placeholder="待添加的标签名称" data-model="addListContent"/>   
                <input type="submit" value="添加标签" />
            </form> 
            <form data-onSubmit="modifyListTag">
                <input data-onInput="changeModifyListTag" placeholder="修改后的标签名称" data-model="modifyListContent"/>   
                <input type="submit" value="修改标签" />
            </form>     
            <form data-onSubmit="delListTag">
                <input type="submit" value="删除标签" />
            </form>   
            <br/>
            <button data-onClick="delTask">删除任务</button>
        </li>
        </ul>       
      </div>
      
    </div>
</div>
<script src="index.js"></script>
</body>
</html>
