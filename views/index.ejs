<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>TODO</title>
    <style>
        .hide {display: none;}
        .show {display: block;}
        .wait span, .doing span, .done span {
            background: #fff;
            cursor: pointer;
        }
        .wait .swait, .doing .sdoing, .done .sdone {
            background: #00aa00;
        }
    </style>
</head>
<body>
<div id="root">
  <div>
    <h1 data-model="title"></h1>
    <button data-onClick="addTask">Add Task</button>
    <form data-onSubmit="submit", data-class="addShow">
        <input data-onInput="changeAddContent" placeholder="Content" data-model="addContent"/>
        <input data-onInput="changeAddTags" placeholder="Tags, separated by comma!" data-model="addTags"/>
        <input type="submit" value="submit task" />
    </form>
    <ul>
      <li data-list="todos">
        <p data-model="todos.task"></p>
        <p data-model="todos.date"></p>
        <div data-class="todos.status">
            <span data-onClick="stateWait" class="swait">Wait</span>
            <span data-onClick="stateDoing" class="sdoing">Doing</span>
            <span data-onClick="stateDone" class="sdone">Done</span>
        </div>
        <ul>
          <li data-list="todos.tags">
            <span data-model="todos.tags.name"></span>
          </li>
        </ul>
        <button data-onClick="delTask">Delete Task</button>
      </li>
    </ul>
  </div>
</div>
<script src="index.js"></script>
</body>
</html>
